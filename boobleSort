#include <iostream>

int main()
{
	int Arr[10] = { 2, 5, 3, 8, 1, 10, 9, 4, 6, 7 };
	// --------------------------------------------------------------------- 
	for (int i = 0; i < 10; i++)
	{
		std::cout << Arr[i] << " ";
	}
	// --------------------------------------------------------------------- 
	for (int j = 9; j > 0; j--)
	{
		{
			for (int i = 0; i < j; i++)
			{
				if ((Arr[i] > Arr[i + 1]) && (i < 9))
				{
					int temp = Arr[i];
					Arr[i] = Arr[i + 1];
					Arr[i + 1] = temp;
				}
			}
		}
	}
	// --------------------------------------------------------------------- 

	std::cout << std::endl;
	for (int i = 0; i < 10; i++)
	{
		std::cout << Arr[i] << " ";
	} 
	std::getchar();
}
